<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BSUIRSchedule" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/BSUIR_blue</item>
        <item name="colorPrimaryVariant">@color/BSUIR_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/BSUIR_blue</item>
        <item name="colorSecondaryVariant">@color/BSUIR_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:navigationBarColor">@color/BSUIR_blue</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/BSUIR_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="AppTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="actionMenuTextColor">#99FFFFFF</item>
        <item name="android:colorControlHighlight">#99FFFFFF</item>
        <item name="android:colorButtonNormal">#99FFFFFF</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Dialog.FixedSize">
        <item name="android:background">@drawable/rounded_back</item>

    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_back</item>
    </style>

    <style name="RoundShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/background_dialog</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/BSUIR_blue</item>
        <item name="rippleColor">@color/BSUIR_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
    </style>
</resources>