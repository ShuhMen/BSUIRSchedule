<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/listOfGroupsFragment">

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.maximshuhman.bsuirschedule.ScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule">
        <argument
            android:name="groupNumber"
            android:defaultValue="hgg" />
        <action
            android:id="@+id/action_scheduleFragment_to_listOfGroupsFragment"
            app:destination="@id/listOfGroupsFragment" />
        <argument
            android:name="course"
            app:argType="integer" />
        <argument
            android:name="specialityAbbrev"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/teachersFragment"
        android:name="com.maximshuhman.bsuirschedule.TeachersFragment"
        android:label="fragment_teachers"
        tools:layout="@layout/fragment_teachers" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.maximshuhman.bsuirschedule.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.maximshuhman.bsuirschedule.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_favoriteGroup"
            app:destination="@id/favoriteGroup" />

    </fragment>
    <fragment
        android:id="@+id/listOfGroupsFragment"
        android:name="com.maximshuhman.bsuirschedule.ListOfGroupsFragment"
        android:label="fragment_list_of_groups"
        tools:layout="@layout/fragment_list_of_groups" >
        <action
            android:id="@+id/action_listOfGroupsFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment">

        </action>
    </fragment>
    <fragment
        android:id="@+id/favoriteGroup"
        android:name="com.maximshuhman.bsuirschedule.FavoriteGroup"
        android:label="fragment_favorite_group"
        tools:layout="@layout/fragment_favorite_group" >
        <action
            android:id="@+id/action_favoriteGroup_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />

        <argument
            android:name="groupNumber"
            android:defaultValue="hgg" />
        <argument
            android:name="course"
            app:argType="integer" />
        <argument
            android:name="specialityAbbrev"
            app:argType="string" />
    </fragment>
</navigation>